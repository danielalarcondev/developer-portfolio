---
import LiveIcon from './ProjectsIcons/LiveIcon.astro';
import GithubIcon from './ProjectsIcons/GithubIcon.astro';

interface Props {
	repositoryLink: string | undefined;
	liveLink: string | undefined;
}

const { repositoryLink, liveLink } = Astro.props;
---

<div class:list={['flex-1']}>
	<div
		class:list={[
			'flex',
			'flex-row',
			'flex-wrap',
			'w-full lg:w-1/2',
			'pr-0 lg:pr-8',
			'gap-2',
		]}>
		{
			liveLink && (
				<a
					href={liveLink}
					target='_blank'
					class:list={['flex-1', 'h-[2rem]']}>
					<button
						class:list={[
							'w-full',
							'h-full',
							'rounded-lg',
							'bg-rose-500 hover:bg-rose-600',
							'text-white',
							'cursor-pointer',
						]}
						type='button'>
						<div
							class:list={[
								'w-full',
								'h-full',
								'flex',
								'flex-wrap',
								'gap-2',
								'justify-center',
								'content-center',
							]}>
							<LiveIcon /> Live
						</div>
					</button>
				</a>
			)
		}
		{
			repositoryLink && (
				<a
					href={repositoryLink}
					target='_blank'
					class:list={['flex-1', 'h-[2rem]']}>
					<button
						class:list={[
							'w-full',
							'shrink-0',
							'h-full',
							'rounded-lg',
							'hover:bg-rose-100',
							'border-2',
							'border-rose-500 hover:border-rose-600',
							'text-rose-500 hover:text-rose-600',
							'cursor-pointer',
						]}>
						<div
							class:list={[
								'w-full',
								'h-full',
								'flex',
								'flex-wrap',
								'gap-2',
								'justify-center',
								'content-center',
							]}>
							<GithubIcon /> Repository
						</div>
					</button>
				</a>
			)
		}
	</div>
</div>
